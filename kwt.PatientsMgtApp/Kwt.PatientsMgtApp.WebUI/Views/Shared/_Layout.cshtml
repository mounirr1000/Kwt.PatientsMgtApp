<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

    @*@Styles.Render("~/Content/themes/base/css")*@
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    @RenderSection("DeleteConfirm", required: false)
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"><img src="~/Content/Images/Kuwait_embassyLogo.png" /></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Patients Managemet", "Index", "Patient", new { area = "" }, new { @class = "navbar-brand" })
                    if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Companions Managemet", "List", "Companion", new { area = "" }, new { @class = "navbar-brand" })

                        @Html.ActionLink("Payment Managemet", "List", "Payment", new { area = "" }, new { @class = "navbar-brand" })

                        @Html.ActionLink("Reports", "List", "Report", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    @Html.Partial("_LoginPartial")
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Companion Managment", "List", "Companion")</li>
                    <li>@Html.ActionLink("Patient Managment", "List", "Patient")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>

    <div class="container body-content">

        @{ Html.RenderPartial("_Alerts"); }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker();
        });
    </script>
</body>
</html>
