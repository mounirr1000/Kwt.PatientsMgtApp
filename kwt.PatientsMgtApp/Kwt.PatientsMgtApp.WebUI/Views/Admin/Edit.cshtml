
@using Kwt.PatientsMgtApp.WebUI.Models
@model ApplicationUser
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.Id)
        <fieldset>
            <legend>Create New User</legend>
            <ul class="fieldlist">

                <li>
                    @Html.LabelFor(model => model.Email, new { @class = "" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "k-textbox", style = "width: 100%;" })
                    <div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "k-error-colored" })
                    </div>

                </li>
                <li>
                    @Html.LabelFor(model => model.UserName, new { @class = "" })
                    @Html.TextBoxFor(model => model.UserName, new { @class = "k-textbox", style = "width: 100%;" })
                    <div>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "k-error-colored" })
                    </div>

                </li>
                <li>
                    <label>Locked out?</label>
                    @Html.EditorFor(model => model.LockoutEnabled, new {@class = "k-textbox", style = "width: 100%;"})
                    <div>
                        @Html.ValidationMessageFor(model => model.LockoutEnabled, "", new {@class = "k-error-colored"})
                    </div>
                </li>
                <li>
                    <label>Locked Out Date Period</label>
                    @Html.TextBoxFor(model => model.LockoutEndDateUtc, new {@class = "", style = ""})
                    <div>
                        @Html.ValidationMessageFor(model => model.LockoutEndDateUtc, "", new {@class = "k-error-colored"})
                    </div>
                </li>
                @*<li>
                   <label>New Password</label>
                    <input name="password" type="password" class="k-textbox" style="width: 100%"/>
                    
                </li>*@
            </ul>
        </fieldset>
        <div class="mt-3">
            <p>
                <a href="@Url.Action("Index")" class="k-button"><i class="fa fa-arrow-left" style="color: lightblue"></i> Back to List</a>
                <button type="submit" class="k-button"><i class="fa fa-save" style="color: blueviolet"></i> Save</button>
            </p>
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function() {
            $("#LockoutEndDateUtc").kendoDatePicker();
        });
       
    </script>
}

