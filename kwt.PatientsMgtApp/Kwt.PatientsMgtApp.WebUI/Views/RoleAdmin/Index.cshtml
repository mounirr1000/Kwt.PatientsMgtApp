@using Kwt.PatientsMgtApp.WebUI.Infrastructure
@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{ ViewBag.Title = "Roles"; }
<div class="panel panel-primary">
    <div class="panel-heading">Roles</div>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Roles</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users == null || role.Users.Count == 0)
                        {
                            @: No Users in Role
                        }
                        else
                        {
                            <p>

                                @string.Join("|", role.Users.Select(x =>
                                    Html.GetUserName(x.UserId)))

                            </p>
                        }
                    </td>
                    <td>
                        @*@using (Html.BeginForm("Delete", "RoleAdmin",
                    new { roleId = role.Id }))
                        {*@
                            
                            @Html.ActionLink("Edit", "Edit", new { id = role.Id },
                                    new { @class = "btn btn-primary btn-xs" })
                            <a href="javascript:confirmDelete('@role.Id','roleId')" class="btn btn-danger btn-xs">Delete</a>

                            @*<button class="btn btn-danger btn-xs"
                                        type="submit">
                                    Delete
                                </button>*@
                            @*<button onclick="confirmDelete(this.id,'roleId')" style="color: white;" class="btn btn-danger btn-xs" id="@role.Id">Delete</button>*@
                        @*}*@

                    </td>

                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create New Role", "Create", null, new { @class = "btn btn-primary" })


@section DeleteConfirm{

    @{ Html.RenderPartial("_DeleteConfirmationModel"); }

}

@section Scripts {

    @{ Html.RenderPartial("_DeleteConfirmationjs"); }
   

}